<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="thirdstage.project2.requirement.Requirement"
        table="Requirement2"
        schema="project2"
    >

        <id
            name="no"
            column="no"
            type="java.lang.Long"
            length="16"
            unsaved-value="null"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Requirement.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="id"
            type="string"
            update="true"
            insert="true"
        >
            <column
                name="id" 
                length="32"
                index="idx_requirement_1"
                not-null="true"
                unique="true"
            />
        </property>

        <property
            name="title"
            type="string"
            update="true"
            insert="true"
        >
            <column
                name="title" 
                length="100"
                not-null="true"
                unique="false"
            />
        </property>

        <property
            name="request"
            type="string"
            update="true"
            insert="true"
        >
            <column
                name="request" 
                length="1000"
                not-null="false"
                unique="false"
            />
        </property>

        <property
            name="response"
            type="string"
            update="true"
            insert="true"
        >
            <column
                name="response" 
                length="1000"
                not-null="false"
                unique="false"
            />
        </property>

        <property
            name="requestedDate"
            type="java.util.Date"
            update="true"
            insert="true"
        >
            <column
                name="requestedDate" 
                not-null="false"
                unique="false"
            />
        </property>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Requirement.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

        <query name="requirement.getRequirementById"><![CDATA[
            from Requirement as req where req.id = :id
        ]]></query>
        <query name="requirement.getAllRequirements"><![CDATA[
            from Requirement
        ]]></query>

</hibernate-mapping>
