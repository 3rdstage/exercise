<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="thirdstage.exercise.spring.jsf.case1.Requirement"
        table="Requirement1"
        schema="test"
    >

        <id
            name="no"
            column="no"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Requirement.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="id"
            type="string"
            update="true"
            insert="true"
        >
            <column
                name="id" 
                length="32"
                index="idx_requirement1_1"
                not-null="true"
                unique="true"
                sql-type="vachar"
            />
        </property>

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="250"
            not-null="true"
            unique="false"
        />

        <property
            name="request"
            type="java.lang.String"
            update="true"
            insert="true"
            column="request"
            length="4000"
            not-null="false"
            unique="false"
        />

        <property
            name="answer"
            type="java.lang.String"
            update="true"
            insert="true"
            column="answer"
            length="4000"
            not-null="false"
            unique="false"
        />

        <property
            name="source"
            type="java.lang.String"
            update="true"
            insert="true"
            column="source"
            length="50"
            not-null="false"
            unique="false"
        />

        <property
            name="significance"
            type="java.lang.String"
            update="true"
            insert="true"
            column="significanceCode"
            length="10"
            not-null="false"
            unique="false"
        />

        <property
            name="hardness"
            type="java.lang.String"
            update="true"
            insert="true"
            column="hardnessCode"
            length="10"
            not-null="false"
            unique="false"
        />

        <property
            name="status"
            type="java.lang.String"
            update="true"
            insert="true"
            column="statusCode"
            length="10"
            not-null="false"
            unique="false"
        />

        <property
            name="requestedDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="requestedDate"
            not-null="false"
            unique="false"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Requirement.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

        <query name="getAllRequirements"><![CDATA[
            from Requirement
        ]]></query>

</hibernate-mapping>
