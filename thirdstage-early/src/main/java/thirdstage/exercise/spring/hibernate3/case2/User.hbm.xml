<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="thirdstage.exercise.spring.hibernate3.case2.User"
        table="User2"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-User.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="password"
            type="string"
            update="false"
            insert="true"
            column="passwd"
            length="20"
            not-null="true"
            unique="false"
        />

        <property
            name="name"
            type="string"
            update="false"
            insert="true"
            column="name"
            length="50"
            not-null="true"
            unique="false"
        />

        <property
            name="email"
            type="string"
            update="false"
            insert="true"
            column="email"
            length="80"
            not-null="false"
            unique="false"
        />

        <many-to-one
            name="contactInfo"
            class="thirdstage.exercise.spring.hibernate3.case2.ContactInfo"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            foreign-key="fk_user2_2"
            column="contactInfoId"
            not-null="false"
        />

        <many-to-one
            name="group"
            class="thirdstage.exercise.spring.hibernate3.case2.Group"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            foreign-key="fk_user2_1"
            column="groupId"
            not-null="false"
        />

        <list
            name="roles"
            table="UserRole2"
            lazy="false"
            inverse="false"
            cascade="none"
        >

            <key
                column="userId"
                  foreign-key="fk_userrole2_1"
            >
            </key>

            <index
                column="roleId"
            />

            <many-to-many
                class="thirdstage.exercise.spring.hibernate3.case2.Role"
                column="roleId"
                outer-join="auto"
                foreign-key="fk_userrole2_2"
             />

        </list>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-User.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

        <query name="findAllUsers"><![CDATA[
            from User as user order by user.id asc
        ]]></query>

</hibernate-mapping>
