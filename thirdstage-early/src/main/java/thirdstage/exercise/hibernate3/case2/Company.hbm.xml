<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="thirdstage.exercise.hibernate3.case2.Company"
        table="Company"
    >

        <id
            name="id"
            column="id"
            type="java.lang.String"
            length="16"
            unsaved-value="null"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Company.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
        >
            <column
                name="name" 
                index="idx_company_1"
            />
        </property>

        <list
            name="employees"
            lazy="false"
            inverse="true"
            cascade="save-update"
        >

            <key
                column="companyId"
            >
            </key>

            <index
                column="id"
            />

            <one-to-many
                  class="thirdstage.exercise.hibernate3.case2.Employee"
            />

        </list>

        <set
            name="factories"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

            <key
                column="companyId"
            >
            </key>

            <one-to-many
                  class="thirdstage.exercise.hibernate3.case2.Factory"
            />

        </set>

        <array
            name="buildings"
            inverse="true"
            cascade="save-update"
        >

            <key
                column="companyId"
            >
            </key>

            <index
                column="id"
            />

            <one-to-many
                  class="thirdstage.exercise.hibernate3.case2.Building"
            />

        </array>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Company.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
