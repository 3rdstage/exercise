<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="thirdstage.exercise.hibernate3.case4.Employement"
        table="Employment4"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Employement.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="startDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="startDate"
        />

        <property
            name="endDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="endDate"
        />

        <many-to-one
            name="employer"
            class="thirdstage.exercise.hibernate3.case4.Employer"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            foreign-key="fk_employment_1"
            column="employerId"
            not-null="true"
        />

        <many-to-one
            name="employee"
            class="thirdstage.exercise.hibernate3.case4.Employee"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            foreign-key="fk_employment_2"
            column="employeeId"
            not-null="true"
        />

        <component
            name="hourlyRate"
            class="thirdstage.exercise.hibernate3.case4.MonetaryAmount"
        >
        <property
            name="amount"
            type="double"
            update="true"
            insert="true"
        >
            <column
                name="hourlyamount" 
            />
        </property>

        <property
            name="currency"
            type="java.util.Currency"
            update="true"
            insert="true"
        >
            <column
                name="hourlycurrency" 
            />
        </property>

        </component>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Employement.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
